size = 250px
&#landing
	background white
	z-index 1
	transform translateY(-100%) scale(0.2) rotateX(90deg)
	text-shadow 0 1px 1px white
	font-weight 100 !important
	aside
		overflow hidden
		position absolute
		transition all 0.5s ease-in-out
		img 
			position absolute
			z-index -1
			opacity 0.1
			transition all 0.2s ease-in-out
			left -25%
			top 25%
		&.main
			left 50%
			top 50%
			right 50%
			bottom 50%
			width ( size / 2 )
			height ( size / 2 )
			border-radius 100%
			box-shadow 0 0 1000px rgba(0, 0, 0, 0.4)
			border solid 1px rgba(0, 0, 0, 0.2)
			margin -(size / 2) 0 0 0 -(size / 2)
			text-align center
			padding ( size / 4 )
			font-size 18pt
			color white
			&:hover
				box-shadow 0 0 100px rgba(0, 0, 0, 0.8)
				color black
				img
					opacity 0.2
			h1
				padding 0
				margin 0
				opacity 1
				height ( size / 4 )
				margin (size / 8) 0
			.content
				opacity 0
				transform translateX(-100%)
		&.readmore
			top 0
			left 0
			width 100%
			height 100%
			background white
			z-index 999
			box-shadow 0 0 50px rgba(0, 0, 0, 0.2) inline
			padding 25px
			border-radius 0px
			border none
			h1
				opacity 0
				transform translateX(100%)
			.content 
				opacity 1
			img
				z-index 9
				top auto
				left auto
				bottom -100px
				right -100px
				opacity 0.4
				&:hover
					opacity 0.8
					bottom -75px
					right -50px
	nav
		position absolute
		top 50%
		left 0
		margin -(size / 2) 0 0 0 -( size / 2)
		height size
		width 50%
		display table
		text-align right
		> *
			margin 0 0 0 ( size / 2 )
			padding-right 50px
			display table-cell
			vertical-align middle
		&.right
			text-align left
			left auto
			right 0
			margin-left 0
			margin-right -(size / 2)
			& > *
				margin-left 0
				margin-right (size / 2)
				padding-right 0
				padding-left 50px
		h1
			font-size 36pt
			font-weight 100
		li
			list-style none
			padding 10px
			font-size 14pt
		h1, li
			color black
			transition all 0.5s ease-in-out
			opacity 0.2
			cursor pointer
			&#chrome
				color yellow
			&#firefox
				color orange
			&#windows
				color blue
			&#opera
				color red
			&:hover 
				opacity 0.8

@media (max-width:320px)
	body #appwrapper > section#landing
		size = 100px
		nav
			top 0
			left 0
			width 100%	
			height 150px
			line-height 150px
			&.right
				top 250px
		aside
			top 175px
			width size
			height size
			margin -(size / 2) 0 0 0 -(size / 2)