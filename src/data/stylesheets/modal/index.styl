#modal-window
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	transition all 1s ease-in-out
	background rgba(0, 0, 0, 0)
	z-index -1
	section
		position absolute
		left 50%
		top 50%
		right 50%
		bottom 50%
		border-radius 2px
		width 480px
		height 290px
		margin -150px 0 0 -250px
		box-shadow -1px 1px 5px rgba(0, 0, 0, 0.4)
		background white
		transform scale(0.2)
		transition all 1s ease-in-out
		opacity 0
		> *
			position absolute
			left 0
			right 0
		header
			top 0
			height 55px
			line-height 55px
			overflow hiden
			font-size 18pt
			font-weight 100
			padding-left 10px
		nav
			top 10px
			right 10px
			li
				list-style none
				margin 5px
				display inline-block
				float right
				font-size 12pt
		article
			overflow auto
			top 70px
			bottom 0
	&.fullscreen section
		width 100%
		height 100%
		margin 0
		left 0
		top 0
		bottom 0
		right 0

	&.fullscreen, &.normal 
		z-index 999999
		article
			padding 0 25px
			

&.modal-active
	border-radius 2px
	opacity 0.8
	z-index -1
	#modal-container 
		&, *
			visibility visible
		#modal-window
			background rgba(0, 0, 0, 0.2)
			z-index 1
			section
				transform scale(1)
				opacity 1
	> *:not(#modal-container)
		z-index -1 !important

@media (max-width:320px) 
	#modal-window section
		width 300px
		margin-left -150px

